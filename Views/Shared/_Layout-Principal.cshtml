<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - proyectoclase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyectoclase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoClase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @await RenderSectionAsync("Éstilos", required: false)
    <style>
        .custom-navbar {
            background-color: white; /* Reemplaza "yourCustomColor" con tu código de color personalizado */
        }

        .custom-navbar1 {
            background-color: black; /* Reemplaza "yourCustomColor" con tu código de color personalizado */
        }
        .navbar-nav .nav-link.active,
        .navbar-nav .nav-link:hover {
            background-color: tan; /* Puedes cambiar este color según tu preferencia */
            color: black; /* Cambia el color del texto cuando está activo o al pasar el ratón */
        }

        .bienvenido-text {
            margin-right: 10px;
            color: white; /* Color blanco para el texto Bienvenido */
            font-family: 'Roboto', sans-serif; /* Reemplaza 'Roboto' con la fuente que desees */
            font-weight: bold; /* Hace que el texto sea más grueso */
        }

        .usuario-text {
            color: white; /* Color blanco para el texto Bienvenido */
            font-family: 'Roboto', sans-serif; /* Reemplaza 'Roboto' con la fuente que desees */
            font-weight: bold; /* Hace que el texto sea más grueso */
        }

        .navbar-light .navbar-nav .nav-link {
            color: white !important; /* Color blanco para el texto del enlace */
            font-family: 'Roboto', sans-serif;
            font-weight: bold;
            transition: color 0.3s; /* Agrega una transición de 0.3 segundos para suavizar el cambio de color */
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: black !important; /* Cambia el color del texto al pasar el mouse */
            }


        .navbar-light .navbar-nav .nav-link {
            color: white !important; /* Color blanco para los enlaces del navbar */
            font-family: 'Roboto', sans-serif; /* Reemplaza 'Roboto' con la fuente que desees */
            font-weight: bold; /* Hace que el texto sea más grueso */
        }

        .navbar-light .navbar-toggler-icon {
            background-color: white; /* Color blanco para el icono del botón de navegación */
            font-family: 'Roboto', sans-serif; /* Reemplaza 'Roboto' con la fuente que desees */
            font-weight: bold; /* Hace que el texto sea más grueso */
        }

        .navbar-light .navbar-nav .nav-item .nav-link {
            color: white !important; /* Color blanco para el texto del nombre de usuario */
            font-family: 'Roboto', sans-serif; /* Reemplaza 'Roboto' con la fuente que desees */
            font-weight: bold; /* Hace que el texto sea más grueso */
        }

        .cerrar-sesion-btn {
            color: white !important; /* Color blanco para el texto del botón Cerrar Sesión */
        }

        .imagen-redonda {
            border-radius: 50%;
        }

        .mb-3 {
            margin-bottom: 0rem !important;
        }
        .div-container {
            margin-left: 0;
            margin-right: 0;
            padding-left: 0;
            padding-right: 0;
            width: 100%;
            box-sizing: border-box;
        }

        color: #fff;
        background-color: tan;
        border-color: tan;
        .cerrar-sesion-btn{
            color: #fff;
            background-color: black;
            border-color: black;
        }

            .cerrar-sesion-btn:hover {
            color: #fff;
            background-color: tan;
            border-color: tan;
        }

        }
        </style>

   
        <!-- Tus estilos y enlaces a CSS... -->
    </head>

   
        <body class="mb-0">
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-navbar">
            <!-- Logo y Título -->
            <a class="navbar-brand mx-auto" href="#" style="display: flex; align-items: center; justify-content: center;">
                <img src="~/img/lo1.png" alt="Logo" class="d-inline-block align-top img-fluid rounded-logo" style="min-width: 100%;">
            </a>
        </nav>
    </div>


            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-navbar1 ">
                <!-- Botón del Navbar Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <!-- Logo -->
                <img src="~/img/1.webp" alt="" height="60" class="imagen-redonda">

                <!-- Navbar principal -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                <li class="nav-item mx-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                @if (User.IsInRole("Admin") || User.IsInRole("Usuario"))
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ListadoProductos">Producto</a>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="ListadoCategorias">Categoria</a>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="ListadoCategorias">Bodega</a>
                        </li>}
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Bodega" asp-action="ListadoBodegas">Bodega</a>
                        </li>}
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Proveedor" asp-action="ListadoProveedores">Proveedor</a>
                        </li>}
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Marca" asp-action="ListadoMarcas">Marca</a>
                        </li>}
              
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="ListadoUsuario">Usuarios</a>
                </li>}
                    </ul>

                    <!-- Navbar derecha -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <div class="d-flex align-items-center">
                                <h6 class="mr-2 mb-0 bienvenido-text">Bienvenido:</h6>
                                <h6 class="mb-0 usuario-text">@ViewData["nombreUsuario"] </h6>
                                <img src="@ViewData["fotoPerfil"]" alt="Foto de perfil" style="width: 30px; height: 30px; border-radius: 50%;" />
                            </div>
                        </li>

                        <li class="nav-item">
                            <form class="form-inline" asp-controller="Login" asp-action="CerrarSesion">
                                <button class="btn cerrar-sesion-btn" type="submit">Cerrar Sesión</button>
                            </form>
                        </li>
                    </ul>
                </div>
            
        </nav>
      
       
  


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $(".navbar-nav .nav-link").on("click mouseover mouseout", function (e) {
                $(".navbar-nav .nav-link").removeClass("active");
                $(this).addClass("active");
            });
        });
    </script>
</body>
</html>