<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - proyectoclase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyectoclase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoClase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @await RenderSectionAsync("Éstilos", required: false)
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <img src="~/img/1.webp" alt="" height="60">

                <!-- Navbar principal -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="ListadoProductos">Producto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="ListadoCategorias">Categoria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bodega" asp-action="ListadoBodegas">Bodega</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Proveedor" asp-action="ListadoProveedores">Proveedor</a>
                        </li>
                        
                    </ul>
                </div>

                <!-- Navbar derecha -->
                <div class="navbar-collapse collapse ml-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item mr-3">
                            <div class="d-flex align-items-center">
                                <h6 class="mr-2 mb-0">Bienvenido</h6>
                                <h6 class="mb-0">@ViewData["nombreUsuario"]</h6>
                                <img src="@ViewData["fotoPerfil"]" alt="Foto de perfil" style="width: 30px; height: 30px; border-radius: 50%;" />
                            </div>
                        </li>
                        <li class="nav-item mr-3">
                            <form class="form-inline" asp-controller="Login" asp-action="CerrarSesion">
                                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Cerrar Sesión</button>
                            </form>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

