@model ProyectoInventario.Models.Entidades.Marca
@{
    ViewData["Title"] = "Crear";
    Layout = null;
}


<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Editar Categoria</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MarcaID" />
                <div class="form-group">
                    <label>Ingrese nombre de la Marca</label>
                    <input asp-for="NombreMarcas" class="form-control" placeholder="Ingrese el nombre de la categoria" />
                    <span asp-validation-for="NombreMarcas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Paid de Origen</label>
                    <input asp-for="PaisOrigen" class="form-control" placeholder="Ingrese la descripcion" />
                    <span asp-validation-for="PaisOrigen" class="text-danger"></span>
                </div>
               

                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


