@model ProyectoInventario.Models.Entidades.Categoria

@{
    ViewData["Title"] = "Crear";
    Layout = null;
}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> INGRESOS DE CATEGORIAS </h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Ingrese nombre del Categorias</label>
                    <input asp-for="NombreCategorias" class="form-control" placeholder="Ingrese un Nombre" />
                    <span asp-validation-for="NombreCategorias" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Ingrese la Descripcion</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la Descripcion" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Ingrese el Tipo de Producto</label>
                    <input asp-for="TipoProducto" class="form-control" placeholder="Ingrese el Tipo de Producto" />
                    <span asp-validation-for="TipoProducto" class="text-danger"></span>
                </div>


                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>