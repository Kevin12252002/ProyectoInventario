@model IEnumerable<ProyectoInventario.Models.Entidades.Producto>
@{
    ViewData["Title"] = "ListadoAutores";

    Layout = "_Layout-Principal";

}


@if (TempData["AlertMessage"] != null)
{


    <div class=" alert alert-success">
        <strong> Ok!! ---</strong>@TempData["AlertMessage"]
    </div>
}
<p>
    <a onclick="showInPopup('@Url.Action("Crear" , "Producto",
       new { Productoid = 0 }, Context.Request.Scheme)','')"
       class=" btn btn-sn btn-primary text-white">
        <i class="fa fa-plus-circle"></i> Agregar un Producto
    </a>


</p>

<div class="col-md-12">

    <div class="card">
        <div class="card-header text-center">
            <h5>Lista de Productos</h5>
        </div>
        <div class="card-body">
            <table id="autor" class="table table- table-hover table responsive table stripped">

                <thead>
                    <tr>
                        <th scope="col">Id_Producto</th>
                        <th scope="col">Nombre_Productor</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Url</th>
                        <th scope="col">Activo</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Modelo</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.ProductoID</th>
                            <td> @Html.DisplayFor(ModelItem => item.NombreProducto) </td>
                            <td> @Html.DisplayFor(ModelItem => item.Precio) </td>
                            <td> @Html.DisplayFor(ModelItem => item.Stock) </td>
                            <td> @Html.DisplayFor(ModelItem => item.URLFotoProducto) </td>
                            <td> @Html.DisplayFor(ModelItem => item.Activo) </td>
                            <td> @Html.DisplayFor(ModelItem => item.Marca) </td>
                            <td> @Html.DisplayFor(ModelItem => item.Modelo) </td>
                            
                            <td>
                                <a onclick="showInPopup('@Url.Action("Editar","Producto",
                                new { id = item.ProductoID }, Context.Request.Scheme)' ,
                                  'Actualizar Autor')" class="btn btn-outline-warning btn-sm">
                                    <i class="fa fa-pencil-alt"></i>
                                </a>
                                <button data-id="@item.ProductoID"
                                        class="btn btn-outline-danger btn-sm deleteItem"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteDialog">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>



<partial name="_MostarModal" />
<partial name="_EliminarModal" />

@section Scripts {


    <script src="~/js/showmodal.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#autor').DataTable(
                {
                    "language": {
                        url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                    },
                });
        });
    </script>

    <script>
        sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Producto/Eliminar/', false);
    </script>

}

